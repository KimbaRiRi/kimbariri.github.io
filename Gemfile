  gem "jekyll-last-modified-at"
  gem "jekyll-feed", "~> 0.12"
  gem "jekyll-sitemap"
  gem "jekyll-archives"
  gem "jekyll-minifier"
  gem "jekyll-toc"
  gem 'jekyll-paginate'
end